{
    "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:import/errors", "plugin:import/warnings"],
    "rules": {
        "indent": ["error", 4, {"SwitchCase": 1}],
        "semi": ["error", "always"],
        "comma-dangle": ["error", "always-multiline"],
        "no-console": ["warn"]
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 9,
        "jsx": true
    },
    "globals": {
        "window": false,
        "document": false,
        "console": false,
        "global": false,
        "process": false,
        "Promise": false
      },
    "settings": {
        "react": {
            "createClass": "createReactClass",
            "pragma": "React",
            "version": "detect"
        }
    },
    "env": {
        "mocha": true,
        "es6": true
    }
}
